<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/blue_0188cc">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="back"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Settings"
            android:textColor="@color/white_ffffff"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:onClick="onEditNameClick"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:src="@drawable/ic_edit_name" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey_f2f2f2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white_ffffff"
                android:clickable="true"
                android:onClick="onModifyPowerStatusClick">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:drawableRight="@drawable/ic_arrow_right"
                    android:text="Power On Default Mode"
                    android:textColor="@color/black_333333"
                    android:textSize="15sp" />

                <View
                    style="@style/divider_line"
                    android:layout_alignParentBottom="true"
                    android:background="@color/grey_d9d9d9" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white_ffffff"
                android:clickable="true"
                android:onClick="onLEDColorSettingsClick">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:drawableRight="@drawable/ic_arrow_right"
                    android:text="LED Setting"
                    android:textColor="@color/black_333333"
                    android:textSize="15sp" />


                <View
                    style="@style/divider_line"
                    android:layout_alignParentBottom="true"
                    android:background="@color/grey_d9d9d9" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white_ffffff"
                android:clickable="true"
                android:onClick="onSystemTimeClick">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:drawableRight="@drawable/ic_arrow_right"
                    android:text="System Time"
                    android:textColor="@color/black_333333"
                    android:textSize="15sp" />


                <View
                    style="@style/divider_line"
                    android:layout_alignParentBottom="true"
                    android:background="@color/grey_d9d9d9" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="12dp"
                android:background="@color/white_ffffff"
                android:clickable="true"
                android:onClick="onDeviceStatusReportPeriod">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:drawableRight="@drawable/ic_arrow_right"
                    android:text="Device Status Report Period"
                    android:textColor="@color/black_333333"
                    android:textSize="15sp" />


                <View
                    style="@style/divider_line"
                    android:layout_alignParentBottom="true"
                    android:background="@color/grey_d9d9d9" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white_ffffff"
                android:clickable="true"
                android:onClick="onPowerReportPeriodClick">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:drawableRight="@drawable/ic_arrow_right"
                    android:text="Power Report Period"
                    android:textColor="@color/black_333333"
                    android:textSize="15sp" />


                <View
                    style="@style/divider_line"
                    android:layout_alignParentBottom="true"
                    android:background="@color/grey_d9d9d9" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white_ffffff"
                android:clickable="true"
                android:onClick="onEnergyReportParametersClick">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:drawableRight="@drawable/ic_arrow_right"
                    android:text="Energy Report Parameters"
                    android:textColor="@color/black_333333"
                    android:textSize="15sp" />


                <View
                    style="@style/divider_line"
                    android:layout_alignParentBottom="true"
                    android:background="@color/grey_d9d9d9" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="12dp"
                android:background="@color/white_ffffff"
                android:clickable="true"
                android:onClick="onConnTimeoutSettingClick">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:drawableRight="@drawable/ic_arrow_right"
                    android:text="Connection Timeout Setting"
                    android:textColor="@color/black_333333"
                    android:textSize="15sp" />


                <View
                    style="@style/divider_line"
                    android:layout_alignParentBottom="true"
                    android:background="@color/grey_d9d9d9" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white_ffffff"
                android:clickable="true"
                android:onClick="onProtectionSettingClick">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:drawableRight="@drawable/ic_arrow_right"
                    android:text="Protection Setting"
                    android:textColor="@color/black_333333"
                    android:textSize="15sp" />


                <View
                    style="@style/divider_line"
                    android:layout_alignParentBottom="true"
                    android:background="@color/grey_d9d9d9" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white_ffffff"
                android:clickable="true"
                android:onClick="onLoadStatusNotificationClick">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:drawableRight="@drawable/ic_arrow_right"
                    android:text="Load Status Notification"
                    android:textColor="@color/black_333333"
                    android:textSize="15sp" />


                <View
                    style="@style/divider_line"
                    android:layout_alignParentBottom="true"
                    android:background="@color/grey_d9d9d9" />
            </RelativeLayout>

            <View
                style="@style/divider_line"
                android:layout_height="10dp"
                android:background="@color/grey_f2f2f2" />

            <RelativeLayout
                android:id="@+id/rl_modify_mqtt_settings"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white_ffffff"
                android:clickable="true"
                android:onClick="onModifyMQTTClick"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:drawableRight="@drawable/ic_arrow_right"
                    android:text="Modify MQTT settings"
                    android:textColor="@color/black_333333"
                    android:textSize="15sp" />


                <View
                    style="@style/divider_line"
                    android:layout_alignParentBottom="true"
                    android:background="@color/grey_d9d9d9" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white_ffffff"
                android:clickable="true"
                android:onClick="onOTAClick">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:drawableRight="@drawable/ic_arrow_right"
                    android:text="OTA"
                    android:textColor="@color/black_333333"
                    android:textSize="15sp" />


                <View
                    style="@style/divider_line"
                    android:layout_alignParentBottom="true"
                    android:background="@color/grey_d9d9d9" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="12dp"
                android:background="@color/white_ffffff"
                android:clickable="true"
                android:onClick="onDeviceInfoClick">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:drawableRight="@drawable/ic_arrow_right"
                    android:text="Device Information"
                    android:textColor="@color/black_333333"
                    android:textSize="15sp" />


                <View
                    style="@style/divider_line"
                    android:layout_alignParentBottom="true"
                    android:background="@color/grey_d9d9d9" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white_ffffff"
                android:clickable="true"
                android:onClick="onMQTTSettingForDevice">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:drawableRight="@drawable/ic_arrow_right"
                    android:text="Settings for Device"
                    android:textColor="@color/black_333333"
                    android:textSize="15sp" />


                <View
                    style="@style/divider_line"
                    android:layout_alignParentBottom="true"
                    android:background="@color/grey_d9d9d9" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="53dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="53dp"
                android:background="@drawable/shape_corner_btn_bg"
                android:clickable="true"
                android:gravity="center"
                android:onClick="onRemoveDeviceClick"
                android:text="Remove device"
                android:textColor="@color/white_ffffff"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="53dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="53dp"
                android:background="@drawable/shape_corner_btn_bg"
                android:clickable="true"
                android:gravity="center"
                android:onClick="onResetDeviceClick"
                android:text="Reset"
                android:textColor="@color/white_ffffff"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>